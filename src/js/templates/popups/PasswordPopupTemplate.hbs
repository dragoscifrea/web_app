<div class="overlay"></div>

<div class="popup-inner add-subfolder-popup">
    <div class="modal-header">
        <button type="button" class="close"></button>
        <h4>folder {{ folderName }}</h4>
    </div>

    <form class="add-subfolder">
        <div class="modal-body">
            <div class="alert alert-danger error hide error-message-container error-msg">
                <button type="button" class="close-error" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <span id="errorMessage"></span>
            </div>

            <div class="form-group">
                <label>Folder Password</label>
                <input type="password" id="pwd" name="pwd" class="subfolder-name" placeholder="Enter Password Here">
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-cancel">Cancel</button>
            <button type="button" class="btn btn-ok">Ok</button>
        </div>
    </form>
</div>
